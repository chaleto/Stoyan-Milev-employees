{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.csvFile) }}
    {{ form_row(form.submitBtn) }}
    {{ form_end(form) }}

    {% if employeePairs %}
        <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
            <thead>
            <tr style="background-color: #4CAF50; color: white;">
                <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Employee ID #1</th>
                <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Employee ID #2</th>
                <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Project ID</th>
                <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Days Worked</th>
            </tr>
            </thead>
            <tbody>
            <tr style="background-color: #f2f2f2;">
                <td style="padding: 12px; text-align: center; border: 1px solid #ddd;">{{ employeePairs.projectId }}</td>
                <td style="padding: 12px; text-align: center; border: 1px solid #ddd;">{{ employeePairs.employeeId_1 }}</td>
                <td style="padding: 12px; text-align: center; border: 1px solid #ddd;">{{ employeePairs.projectId }}</td>
                <td style="padding: 12px; text-align: center; border: 1px solid #ddd;">{{ employeePairs.overlap }}</td>
            </tr>
            </tbody>
        </table>
    {% endif %}

{% endblock %}